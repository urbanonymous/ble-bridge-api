{
  "expo": {
    "name": "ble-api",
    "slug": "ble-api",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "bleapi",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "This app uses Bluetooth to connect to nearby devices.",
        "NSBluetoothPeripheralUsageDescription": "Bluetooth is required to communicate with your device.",
        "NSLocationWhenInUseUsageDescription": "Location access is required to scan for Bluetooth devices.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Location access improves Bluetooth scanning reliability in the background."
      },
      "bundleIdentifier": "com.urbanogt5.bleapi"
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "package": "com.urbanogt5.bleapi",
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_CONNECTED_DEVICE",
        "android.permission.WAKE_LOCK"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-router",
      "react-native-ble-plx"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "990b26dd-eb90-4f8e-8bf4-ded07a3a2583"
      }
    }
  }
}
